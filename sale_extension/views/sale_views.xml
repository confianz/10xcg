<?xml version="1.0"?>
<odoo>
    <data>

        <!--View-->
        <record id="sale_order_form_inherit_sale_extension" model="ir.ui.view">
            <field name="name">sale.order.form.sale.extension.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="order_state" groups ="sales_team.group_sale_salesman" widget="selection"/>
                </field>
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button name="action_request_for_quotation"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-shopping-cart"
                            attrs="{'invisible': [('po_count', '=',0)]}">
                            <field name="po_count" widget="statinfo" string="Purchases"
                            />
                        </button>
                </xpath>
                <field name="state" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <xpath expr="//button[@name='action_cancel']" position="before">
                    <button name="%(action_generate_purchase_order)d" type="action" string="Generate RFQ"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
