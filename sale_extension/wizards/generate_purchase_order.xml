<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_generate_purchase_order" model="ir.ui.view">
            <field name="name">Generate Purchase Order</field>
            <field name="model">generate.purchase.order</field>
            <field name="arch" type="xml">
                <form string="Generate Purchase Order">
                    <field name="line_ids" >
                        <tree editable="bottom" create="false" delete="false">
                            <field name="product_id"/>
                            <field name="vendor_id" required="1" domain="[('id', 'in', vendor_selector_ids)]"/>
                            <field name="qty"/>
                            <field name="product_uom" groups="uom.group_uom"/>
                            <field name="vendor_price"/>
                            <field name="vendor_selector_ids" invisible="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="generate_rfq" string="RFQ" class="oe_highlight" type="object"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_generate_purchase_order" model="ir.actions.act_window">
            <field name="name">Generate Purchase Order</field>
            <field name="res_model">generate.purchase.order</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
